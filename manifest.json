            {
              "type": "mailCompose",
              "control": {
                "id": "ButtonId1",
                "label": "Contoso Action",
                "icon": {
                  "16": "https://www.contoso.com/assets/icon-16.png",
                  "32": "https://www.contoso.com/assets/icon-32.png",
                  "80": "https://www.contoso.com/assets/icon-80.png"
                },
                "action": {
                  "type": "executeFunction",
                  "functionName": "contosoFunction"
                }
              }
            },
            {
              "type": "mailRead",
              "control": {
                "id": "ButtonId1",
                "label": "Contoso Action",
                "icon": {
                  "16": "https://www.contoso.com/assets/icon-16.png",
                  "32": "https://www.contoso.com/assets/icon-32.png",
                  "80": "https://www.contoso.com/assets/icon-80.png"
                },
                "action": {
                  "type": "executeFunction",
                  "functionName": "contosoFunction"
                }
              }
            }
          ]
