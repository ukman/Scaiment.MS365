  "icons": {
    "16": "https://www.contoso.com/assets/icon-16.png",
    "32": "https://www.contoso.com/assets/icon-32.png",
    "80": "https://www.contoso.com/assets/icon-80.png",
    "128": "https://www.contoso.com/assets/icon-128.png"
